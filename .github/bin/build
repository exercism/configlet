#!/usr/bin/env sh

nimble install -d -Y

case "$os" in
  windows)
    nimble build -d:release --passC:'-flto' --passL='-s' --passL='-static'
    7z a canonicaldatasyncer-windows-64bit.zip canonicaldatasyncer.exe
    ;;
  linux)
    nimble build -d:release --passC:'-flto' --passL='-s' --passL='-static'
    tar -cvzf canonicaldatasyncer-linux-64bit.tgz canonicaldatasyncer
    ;;
  macosx)
    nimble build -d:release
    tar -cvzf canonicaldatasyncer-mac-64bit.tgz canonicaldatasyncer
    ;;
esac
