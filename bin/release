#!/usr/bin/env bash

level='minor'
message="$(git log --oneline --format=%B -n 1 HEAD | head -n 1)"

while [[ $# -gt 0 ]]
do
  case "$1" in
    -b|--bump)
      level="$2"
      shift
      shift
    ;;
    -m|--message)
      message="$2"
      shift
      shift
    ;;
    *)
      shift
    ;;
  esac
done

nimble --accept install bump
bump --v --"${level}" "${message}"
